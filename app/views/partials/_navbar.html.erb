<% if user_signed_in? %>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <span class="navbar-brand">OdinFacebook</span>
      </div>
      <ul class="nav navbar-nav">
        <li><%= link_to "All Users", users_path %></li>
        <li><%= link_to "Profile", user_path(current_user) %></li>
        <li class="align-with-navbar">Notifications: <span class="badge"><%= current_user.received_friend_requests.count %></span></li>        
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Settings", edit_user_registration_path, class: "glyphicon glyphicon-cog" %></li>
        <li><%= link_to "LogOut", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-off" %></li>
      </ul>
    </div>
  </nav>
<% else %>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <span class="navbar-brand">OdinFacebook</span>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "LogIn", new_user_session_path, class: "glyphicon glyphicon-log-in" %></li>
        <li><%= link_to "SignUp", new_user_registration_path, class: "glyphicon glyphicon-plus" %></li>
      </ul>
    </div>
  </nav>
<% end %>
