<%= form_for current_user.comments.build, html: { id: "comment_form" } do |f| %>
  <%= f.text_area :content, size: "45x1", class: "form-control", placeholder: "Enter Comment" %>
  <%= f.hidden_field :post_id, value: locals[:friend_post_id] %>

  <%= f.submit "Post", class: "btn btn-primary btn-xs comment-form-submit-btn" %>

<% end %>
